<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.4.0</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>
	<groupId>kr.ohkwon79</groupId>
	<artifactId>maven-release-test</artifactId>
	<version>0.0.2-SNAPSHOT</version>
	<name>maven-release-test</name>
	<description>maven-release-test project with Spring Boot</description>

	<developers>
		<developer>
			<name>ohkwon79</name>
			<email>ohkwon79@outlook.com</email>
		</developer>
	</developers>
	<scm>
		<connection>scm:git:https://github.com/ohkwon79/maven-release-test.git</connection>
		<developerConnection>scm:git:git@github.com:ohkwon79/maven-release-test.git</developerConnection>
		<url>git@github.com:ohkwon79/maven-release-test.git</url>
	  <tag>HEAD</tag>
  </scm>
	<properties>
		<java.version>21</java.version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-jdbc</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-jpa</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-devtools</artifactId>
			<scope>runtime</scope>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>3.1.1</version>
				<configuration>
					<tagNameFormat>@{project.version}</tagNameFormat>
					<preparationGoals>org.codehaus.gmaven:groovy-maven-plugin:execute@print_pre clean verify</preparationGoals>
					<completionGoals>org.codehaus.gmaven:groovy-maven-plugin:execute@print_com</completionGoals>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.gmaven</groupId>
				<artifactId>groovy-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>print_pre</id>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<source>
								println "Hello ${project.version}"
								def newFile = new File("preparationGoals.txt")
								newFile.write("Hello ${project.version}")
							</source>
						</configuration>
					</execution>
					<execution>
						<id>print_com</id>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<source>
								println "Hello ${project.version}"
								def newFile = new File("completionGoals.txt")
								newFile.write("Hello ${project.version}")
							</source>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>